<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sergiocruz.Matematica">

    <!--<uses-permission android:name="android.permission.INTERNET" />-->


    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <uses-feature android:required="false" android:name="android.hardware.faketouch"/>
    <uses-feature android:required="false" android:name="android.hardware.touchscreen"/>
    <uses-feature android:required="false" android:name="android.hardware.screen.landscape"/>
    <uses-feature android:required="false" android:name="android.hardware.screen.portrait"/>
    <uses-feature android:required="false" android:name="android.hardware.sensor.gyroscope"/>
    <uses-feature android:required="false" android:name="android.hardware.sensor.accelerometer"/>

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:name="com.sergiocruz.Matematica.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.sergiocruz.Matematica.activity.AboutActivity"
            android:label="@string/activity_title_about_us"/>
        <activity
            android:name="com.sergiocruz.Matematica.activity.SendMailActivity"
            android:label="@string/activity_title_send_mail"/>

    </application>
</manifest>