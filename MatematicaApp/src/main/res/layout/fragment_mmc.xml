<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context="com.sergiocruz.matematica.fragment.MMCFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/left_right_layout_margin"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/left_right_layout_margin"
            app:cardBackgroundColor="@color/bgCardColor"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/left_right_layout_margin"
                android:paddingTop="4dp"
                android:paddingRight="@dimen/left_right_layout_margin"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="@string/mmc_title"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">


                    <EditText
                        android:id="@+id/mmc_num_1"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:imeOptions="flagNavigateNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize" />


                    <EditText
                        android:id="@+id/mmc_num_2"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittext_margin_left"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <EditText
                        android:id="@+id/mmc_num_3"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <EditText
                        android:id="@+id/mmc_num_4"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittext_margin_left"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_56"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <EditText
                        android:id="@+id/mmc_num_5"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <EditText
                        android:id="@+id/mmc_num_6"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittext_margin_left"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_78"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <EditText
                        android:id="@+id/mmc_num_7"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <EditText
                        android:id="@+id/mmc_num_8"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittext_margin_left"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_statelist"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/edittextsize"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/button_add_mmc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/add_one"
                        android:contentDescription="" />

                    <ImageButton
                        android:id="@+id/button_remove_mmc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/button_add_mmc"
                        android:background="@drawable/less_one"
                        android:contentDescription=""
                        android:visibility="invisible"
                        tools:visibility="visible" />

                    <Button
                        android:id="@+id/calculateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/green_button_style"
                        android:text="@string/calculate"
                        android:textAllCaps="false" />

                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/stealfocus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>


