<?xml version="1.0" encoding="utf-8"?>
<com.sergiocruz.MatematicaPro.Ui.ClickableCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/factorizeRootCardViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/image_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Fatorização de 1234234=" />

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:clickable="true"
            android:contentDescription="@string/favorite_star"
            android:focusable="true"
            android:src="@android:drawable/btn_star_big_on"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/explainLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/show_explain"
            android:textColor="@color/linkBlue"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTop" />

        <TextView
            android:id="@+id/textViewPerformance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:textColor="@color/lightBlue"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/gradient_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/explainLink"
            app:layout_constraintTop_toBottomOf="@+id/textViewTop"
            tools:ignore="SmallSp"
            tools:text="performance" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="explainLink,textViewPerformance" />

        <View
            android:id="@+id/gradient_separator"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:background="@drawable/bottom_border2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrier" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/explainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@id/gradient_separator"
            tools:visibility="visible">

            <TextView
                android:id="@+id/explainTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/expl_text_divisores_1"
                android:textColor="@color/boldColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:textAlignment="viewEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explainTitle1"
                tools:text="resultados\nresult\nres" />

            <View
                android:id="@+id/verticalSeparator"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="4dp"
                android:background="@color/separatorLineColor"
                app:layout_constraintBottom_toBottomOf="@+id/textViewResults"
                app:layout_constraintStart_toEndOf="@+id/textViewResults"
                app:layout_constraintTop_toTopOf="@+id/textViewResults" />

            <TextView
                android:id="@+id/textViewDivisores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="start"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toEndOf="@+id/verticalSeparator"
                app:layout_constraintTop_toTopOf="@+id/textViewResults"
                tools:text="divisor\ndiv\nd" />

            <TextView
                android:id="@+id/explainTitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/explain_divisores2"
                android:textColor="@color/boldColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/verticalSeparator" />

            <TextView
                android:id="@+id/textViewAllResults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explainTitle2"
                tools:text="2x3x4x5x6..." />

            <TextView
                android:id="@+id/explainTitle3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/explain_divisores3"
                android:textColor="@color/boldColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewAllResults" />

            <TextView
                android:id="@+id/textViewFatores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/explainTitle3"
                tools:text="2x3x4x5x6..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sergiocruz.MatematicaPro.Ui.ClickableCardView>